// nepe.cpp : Defines the entry point for the console application.
//
#include "stdafx.h"
#include <iostream>
#include "conio.h"
#define MAX 100

using namespace std;
void cargar (double a[], int tam);
void mostrar (double a[], int tam);
double promedio (double a[], int tam);
void Burbuja(double a[],int tam);
double BusquedaLineal(double a[],int b,int tam);
void main ()
{

	double vec[MAX],prom,k;
	int tam,n,pos;
	do
	{
		cout<<"ingrese el numero de elementos del vector: ";
		cin>>n;
	} while ((0>=n)||(n>100));
	cargar (vec,n);
    cout<<"ingrese el elemento a buscar: ";
	cin>>k;
	pos=BusquedaLineal(vec,k,n);
	if (pos==-1)
		cout<<"No se encuentra el dato"<<endl;
	else
		cout<<"el elemento esta en la posicion: "<<pos<<endl;
	cout<<"el vector ubicado ascendentemente es: "<<endl;
	mostrar (vec,n);
	Burbuja (vec,n);
	prom=promedio (vec,n);
	cout<<"el promedio es: "<<prom<<endl;
	getch ();
}
void cargar (double a[], int tam)
{
	for (int i=0; i<tam; i++)
	{
			cout<<"a["<<i<<"]= ";
			cin>>a[i];
	}
}
void mostrar (double a[], int tam)
{      
	for (int i=0; i<tam; i++)
	{	
		cout<<"a["<<i<<"]= "<<a[i]<<endl;
	}
}
double promedio (double a[], int tam)
{
	double p=0;
	for (int i=0; i<tam; i++)
	{
			p=p+a[i];
	}
		return p/tam;
}
void Burbuja(double a[],int tam)
{
 for(int i = 0; i< tam - 1 ; i++)
   for(int j = i; j< tam;j++)
     if(a[i]>a[j])
	 {
       int temp = a[i];
       a[i]=a[j];
       a[j]=temp;
     }
}
double BusquedaLineal(double a[],int b,int tam)
{
  for(int i = 0; i< tam; i++)
    if(a[i]==b)
       return i;
  return -1;
}
